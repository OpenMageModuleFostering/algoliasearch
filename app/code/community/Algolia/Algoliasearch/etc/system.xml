<?xml version="1.0"?>
<config>
    <sections>
        <algoliasearch translate="label" module="algoliasearch">
            <label>
                <![CDATA[
                Algolia Search
                <style>
                    .algoliasearch-admin-menu span {
                        padding-left: 38px !important;
                        background: url("/skin/frontend/base/default/algoliasearch/algolia-admin-menu.png") 20px 4px no-repeat !important;
                        border-bottom: 1px dotted #636363;
                    }
                    .algoliasearch-admin-menu.active span {
                        background: white url("/skin/frontend/base/default/algoliasearch/algolia-admin-menu.png") 20px 4px no-repeat !important;
                        border-bottom: none;
                    }
                </style>
                ]]>
            </label>
            <class>algoliasearch-admin-menu</class>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>52</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <expanded>1</expanded>
            <groups>
                <credentials translate="label">
                    <label>Credentials &amp; Setup</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <application_id translate="label">
                            <label>Application ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your Application ID</comment>
                        </application_id>
                        <search_only_api_key translate="label">
                            <label>Search-only (public) API key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>A search-only API key (will be included in the public JavaScript code)</comment>
                        </search_only_api_key>
                        <api_key translate="label">
                            <label>Admin API key</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your administration API key (kept private)</comment>
                        </api_key>
                        <index_prefix translate="label">
                            <label>Index Name Prefix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If configured, all indices created by the extension will be prefixed by this value.</comment>
                        </index_prefix>
                        <is_popup_enabled translate="label comment">
                            <label>Enable Auto-completion Menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                The flag indicates whether the search-as-you-type auto-completion menu is enabled. It requires your theme to expose a <code>top.search</code> template.
                                ]]>
                            </comment>
                        </is_popup_enabled>
                        <is_instant_enabled translate="label comment">
                            <label>Enable Instant Search Results Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                The flag indicates whether the search-as-you-type search results page is enabled. It requires your theme to expose a <code>top.search</code> template.
                                ]]>
                            </comment>
                        </is_instant_enabled>
                    </fields>
                </credentials>
                <instant>
                    <label>Instant Search Results Page Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>21</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <instant_selector translate="label comment">
                            <label>DOM Selector</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The DOM selector used to inject the results using JavaScript.</comment>
                        </instant_selector>
                        <facets>
                            <label>Facets</label>
                            <frontend_model>algoliasearch/system_config_form_field_facets</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Configure here the facets you want to display on your search results page sidebar.</comment>
                        </facets>
                        <sorts>
                            <label>Sorts</label>
                            <frontend_model>algoliasearch/system_config_form_field_sorts</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Configure here the different sort orders you want to enable.</comment>
                        </sorts>
                        <replace_categories translate="label comment">
                            <label>Replace categories page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Configure here whether the category pages are replaced by the instant-search results page.</comment>
                        </replace_categories>
                    </fields>
                </instant>
                <products translate="label">
                    <label>Products Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <product_additional_attributes translate="label comment">
                            <label>Attributes</label>
                            <frontend_model>algoliasearch/system_config_form_field_customsortorderproduct</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                Configure here the attributes you want to include in your Algolia records. The order of this setting matters as those at the top of the list are considered more important.<br />
                                <span style="color: #D83900">&#9888;</span> <code>Retrievable</code> need to be set to <code>Yes</code> in order to be displayed.
                                ]]>
                            </comment>
                        </product_additional_attributes>
                        <custom_ranking_product_attributes translate="label comment">
                            <label>Ranking</label>
                            <frontend_model>algoliasearch/system_config_form_field_customrankingproduct</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                Configure here the attributes used to reflect the popularity of your product (number of orders, number of likes, number of views, ...).<br />
                                <span style="color: #D83900">&#9888;</span> All attributes used here must be included in the Attributes configuration.
                                ]]>
                            </comment>
                        </custom_ranking_product_attributes>
                    </fields>
                </products>
                <categories translate="label">
                    <label>Categories Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <category_additional_attributes2 translate="label comment">
                            <label>Attributes</label>
                            <frontend_model>algoliasearch/system_config_form_field_customsortordercategory</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Configure here the attributes you want to include in your Algolia records. The order of this setting matters as those at the top of the list are considered more important.</comment>
                        </category_additional_attributes2>
                        <custom_ranking_category_attributes translate="label comment">
                            <label>Ranking</label>
                            <frontend_model>algoliasearch/system_config_form_field_customrankingcategory</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                Configure here the attributes used to reflect the popularity of your product (number of orders, number of likes, number of views, ...).<br />
                                <span style="color: #D83900">&#9888;</span> All attributes used here must be included in the Attributes configuration.
                                ]]>
                            </comment>
                        </custom_ranking_category_attributes>
                    </fields>
                </categories>
                <pages>
                    <label>Pages Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>45</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <excluded_pages translate="label comment">
                            <label>Excluded Pages</label>
                            <frontend_model>algoliasearch/system_config_form_field_custompages</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Configure here the pages you don't want to search in.</comment>
                        </excluded_pages>
                    </fields>
                </pages>
                <suggestions>
                    <label>Suggestions Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>46</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <min_popularity translate="label comment">
                            <label>Min popularity</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The min popularity a query suggestion need to have to be indexed. Default value is 4.</comment>
                        </min_popularity>
                        <min_number_of_results translate="label comment">
                            <label>Min number of products</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The min number of results a query suggestion to have to be indexed. Default value is 2.</comment>
                        </min_number_of_results>
                    </fields>
                </suggestions>
                <relevance translate="label">
                    <label>Query Expansion Settings</label>
                    <frontend_type>text</frontend_type>
                    <expanded>1</expanded>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <remove_words_if_no_result translate="label comment">
                            <label>Remove Words If No Result?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>algoliasearch/system_removewords</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Optional property to avoid having an empty result page.<br/>
                             LastWords: when a query does not return any result, the last word will be added as optionalWords (the process is repeated with the n-1 word, n-2 word, ... until there is results). This option is particularly useful on e-commerce websites<br/>
                             LastWords: when a query does not return any result, the first word will be added as optionalWords (the process is repeated with the second word, third word, ... until there is results). This option is useful on address search<br/>
                             allOptional: when a query does not return any result, all words will be optional<br/>
                             None: No specific processing is done when a query does not return any result<br/>]]></comment>
                        </remove_words_if_no_result>
                    </fields>
                </relevance>
                <ui translate="label">
                    <label>UI/UX</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <number_product_suggestions translate="label comment">
                            <label>Number of product suggestions</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of product suggestions the auto-completion menu is displaying. Default value is 3.</comment>
                        </number_product_suggestions>
                        <number_product_results translate="label comment">
                            <label>Number of products per page</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of product displayed on the search results page. Default value is 9.</comment>
                        </number_product_results>
                        <number_category_suggestions translate="label comment">
                            <label>Number of category suggestions</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of category suggestions the auto-completion menu is displaying. Default value is 5.</comment>
                        </number_category_suggestions>
                        <number_page_suggestions translate="label comment">
                            <label>Number of page suggestions</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of page suggestions the auto-completion menu is displaying. Default value is 3.</comment>
                        </number_page_suggestions>
                        <number_query_suggestions translate="label comment">
                            <label>Number of query suggestions</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of query suggestions the auto-completion menu is displaying. Default value is 0.</comment>
                        </number_query_suggestions>
                        <max_values_per_facet translate="label comment">
                            <label>Number of values per facet</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The number of values each facet can display. Default value is 10.</comment>
                        </max_values_per_facet>
                        <remove_branding translate="label comment">
                            <label>Remove branding logo</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Configure here whether the algolia logo is added to the autocomplete template.</comment>
                        </remove_branding>
                        <add_to_cart_enable translate="label comment">
                            <label>Add to Cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Configure here whether there is an add to cart button in the template.</comment>
                        </add_to_cart_enable>
                    </fields>
                </ui>
                <queue translate="label">
                    <label>Queue Configuration</label>
                    <expanded>1</expanded>
                    <frontend_type>text</frontend_type>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Queue Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[
                                If enabled, all indexing operations (add, remove & update operations) will be done asynchronously using the CRON mechanism.<br />
                                <span style="color: #D83900">&#9888;</span> Enabling the configuration is recommended in production or if your store has a lot of products.
                                ]]>

                            </comment>
                        </active>
                        <retries translate="label comment">
                            <label>Max Retries</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Number of retries before giving up on unexpected errors.</comment>
                            <depends><active>1</active></depends>
                        </retries>
                        <number_of_element_by_page translate="label comment">
                            <label>Max number of products by indexing job</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The max number of products by indexing job. Default value is 100.</comment>
                            <depends><active>1</active></depends>
                        </number_of_element_by_page>
                        <number_of_job_to_run translate="label comment">
                            <label>Number of jobs to run each time the cron is run</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-digits</validate>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Number of jobs to run each time the cron is run. Default value is 300.</comment>
                            <depends><active>1</active></depends>
                        </number_of_job_to_run>
                    </fields>
                </queue>
            </groups>
        </algoliasearch>
    </sections>
</config>
